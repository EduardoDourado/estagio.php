{% extends 'base.html.twig' %}

{% block title %}Pet index{% endblock %}

{% block body %}
    <h1>Pet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Raca</th>
                <th>Peso</th>
                <th>Idade</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pet in pets %}
            <tr>
                <td>{{ pet.id }}</td>
                <td>{{ pet.nome }}</td>
                <td>{{ pet.raca }}</td>
                <td>{{ pet.peso }}</td>
                <td>{{ pet.idade }}</td>
                <td>
                    <a href="{{ path('app_pet_show', {'id': pet.id}) }}">show</a>
                    <a href="{{ path('app_pet_edit', {'id': pet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pet_new') }}">Create new</a>
{% endblock %}
