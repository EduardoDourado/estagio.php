{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

<table border='1'>

<thead>

<tr>
<th>Nome</th>
<th>Idade</th>
<th>Ação</th>
</tr>

</thead>

<tbody>

{% for user in users %}
<tr>
<td>{{user.name}}</td>
<td>{{user.idade}}</td>
<td>
<a href="{{path('app_user_show', {id: user.id})}}">Ver</a>
<a href="{{path('app_user_edit', {id: user.id})}}">Editar</a>
</td>

</tr>

</tbody>
{% endfor %}
</table>

    {# Nome: {{user.name}}<br/>
   idade: {{user.idade}}<br/>
  Status: {{user.status}}<br/>
  Criado em: {{user.createdAt|format_datetime('short','short',locale:'pt', timezone:'America/Porto_Velho') }}<br/>
    #}
</div>
{% endblock %}
